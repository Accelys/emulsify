{#
/**
 * Available variables:
 * - h6_base_class - the base class name
 * - heading_6_modifiers - array of modifiers to add to the base classname
 * - heading_6_blockname - blockname prepended to the base classname
 * - heading_6_url - (optional) the url the heading should poing to
 * - heading_6 - the content of the heading (typically text)
 */
#}
<h6 class="{{ h6_base_class|default('heading-6') }}{% for modifier in heading_6_modifiers %} {{ h6_base_class|default('heading-6') }}--{{ modifier }}{% endfor %}{% if heading_6_blockname %} {{ heading_6_blockname }}__{{ h6_base_class|default('heading-6') }}{% endif %}">
  {% if heading_6_url %}
    {% include "@atoms/01-links/link/link.twig"
      with {
        "link_base_class": heading_6_link_base_class,
        "link_blockname": heading_6_link_blockname|default('heading-6'),
        "link_url": heading_6_url,
        "link_content": heading_6,
      }
    %}
  {% else %}
    {{ heading_6 }}
  {% endif %}
</h6>
