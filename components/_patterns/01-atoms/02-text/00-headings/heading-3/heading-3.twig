{#
/**
 * Available variables:
 * - heading_3 - the content of the heading (typically text)
 * - heading_3_url - the url the heading should poing to
 * - heading_3_modifiers - array of modifiers to add to the base classname
 * - heading_3_base_class - the base class name
 * - heading_3_blockname - blockname prepended to the base classname
 * - heading_3_link_base_class - override the link base class
 * - heading_3_link_blockname - override the link block name
 */
#}
{% set heading_3_base_class_var = heading_3_base_class|default('heading-3') %}

<h3 class="{{ heading_3_base_class_var }}{% for modifier in heading_3_modifiers %} {{ heading_3_base_class_var }}--{{ modifier }}{% endfor %}{% if heading_3_blockname %} {{ heading_3_blockname }}__{{ heading_3_base_class_var }}{% endif %}">
  {% if heading_3_url %}
    {% include "@atoms/01-links/link/link.twig"
      with {
        "link_base_class": heading_3_link_base_class,
        "link_blockname": heading_3_link_blockname|default('heading-3'),
        "link_url": heading_3_url,
        "link_content": heading_3,
      }
    %}
  {% else %}
    {{ heading_3 }}
  {% endif %}
</h3>
