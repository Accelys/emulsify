{#
/**
 * Available variables:
 * - img_modifiers - array of modifiers to add to the base classname
 * - img_blockname - blockname prepended to the base classname
 * - img_src - the actual image file location
 * - img_alt - (optional) the alt text for screen readers and when the image cannot load
 */
#}
<img src="{{ img_src }}"{% if img_alt %} alt="{{ img_alt }}"{% endif %} class="{{ image_base_class|default('image') }}{% for modifier in image_modifiers %} {{ image_base_class|default('image') }}--{{ modifier }}{% endfor %}{% if image_blockname %} {{ image_blockname }}__{{ image_base_class|default('image') }}{% endif %}" />
