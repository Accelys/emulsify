{#
/**
 * Available variables:
 * - ol_base_class - the base classname
 * - modifiers - array of modifiers to add to the base classname
 * - blockname - blockname prepended to the base classname
 *
 * - listItems - TBD
 */
#}
{% set ol_base_class = ol_base_class|default('ol') %}

<ol{{ bem(ol_base_class, (modifiers), blockname) }}>
  {% for ol_item in ol_items %}
    {% include "@atoms/03-lists/_list-item.twig"
      with {
        "list_item_label": ol_item.label,
        "list_item_content": ol_item.content,
      }
    %}
  {% endfor %}
</ol>
