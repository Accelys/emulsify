<dl class="dl-list{% for modifier in dl_list_modifiers %} dl-list--{{ modifier }}{% endfor %}{% if dl_list_blockname %} {{ dl_list_blockname }}__dl-list{% endif %}">
  {% for dl_item in dl_list %}
    {% include "@atoms/03-lists/_definition-list-item.twig"
      with {
        "dl_term": dl_item.dl_term,
        "dl_definition": dl_item.dl_definition
      }
    %}
  {% endfor %}
</dl>
