{% if grid_label %}
{% include "@atoms/02-text/00-headings/heading-2/heading-2.twig"
  with {
    "heading": grid_label,
  }
%}
{% endif %}
<div{{ bem('grid', (modifiers), blockname) }}>
  {% block grid_content %}
    {% for item in items %}
      <div class="grid__item">{{ item }}</div>
    {% endfor %}
  {% endblock %}
</div>
