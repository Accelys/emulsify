{% if grid_label %}
{% include "@atoms/02-text/00-headings/heading-2/heading-2.twig"
  with {
    "heading_2": grid_label,
  }
%}
{% endif %}
<div class="grid{% if grid_modifiers %}{% for modifier in grid_modifiers %} {% if blockname %}{{ blockname }}__{% endif %}grid--{{ modifier }}{% endfor %}{% elseif blockname %} {{ blockname }}__grid{% endif %}">
  {% block grid_content %}
    {% for item in items %}
      <div class="grid__item">{{ item }}</div>
    {% endfor %}
  {% endblock %}
</div>
