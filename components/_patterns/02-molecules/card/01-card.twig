<div class="card{% for modifier in card_modifiers %} card--{{ modifier }}{% endfor %}{% if card_blockname %} {{ card_blockname }}__card{% endif %}">
  {% if card_img_src %}
    {% include "@atoms/04-images/00-image/image.twig"
      with {
        "img_src": card_img_src,
        "img_alt": card_img_alt,
        "img_modifiers": card_img_modifiers,
        "img_blockname": card_img_blockname|default('card'),
      }
    %}
  {% endif %}
  {% if card_title %}
    {{ title_prefix }}
    {% include "@atoms/02-text/00-headings/heading-2/heading-2.twig"
      with {
        "heading_2": card_title,
        "heading_2_url": card_title_link,
        "h2_base_class": card_title_base_class|default('title'),
        "heading_2_modifiers": card_title_modifiers,
        "heading_2_blockname": card_title_blockname|default('card'),
      }
    %}
    {{ title_suffix }}
  {% endif %}
  {% if card_subtitle %}
    {% include "@atoms/02-text/00-headings/heading-3/heading-3.twig"
      with {
        "heading_3": card_subtitle,
        "heading_3_url": card_subtitle_link,
        "h3_base_class": card_subtitle_base_class|default('subtitle'),
        "heading_3_modifiers": card_subtitle_modifiers,
        "heading_3_blockname": card_subtitle_blockname|default('card'),
      }
    %}
  {% endif %}
  {% if card_body %}
    <div class="card__body">
      {% include "@atoms/02-text/text/01-paragraph.twig"
        with {
          "paragraph_content": card_body,
          "paragraph_base_class": card_body_base_class|default('body'),
          "paragraph_modifiers": card_body_modifiers,
          "paragraph_blockname": card_body_blockname|default('card'),
        }
      %}
    </div>
  {% endif %}
  {% if card_link_url %}
    {% include "@atoms/01-links/link/link.twig"
      with {
        "link_url": card_link_url,
        "link_content": card_link_text,
        "link_modifiers": card_link_modifiers,
        "link_blockname": card_link_blockname|default('card'),
      }
    %}
  {% endif %}
</div>
